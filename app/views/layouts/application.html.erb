  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Surf Buddy" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>


  <body>
    <nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Surf Buddy", root_url %></a></h1>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      <li><%= link_to "Posts", posts_path %></li>
      <li class="divider"></li>
      <li><%= link_to "Condition Reports" %></li>
      <li class="divider"></li>
      <li><%= link_to "Messages" %></li>
      <li class="divider"></li>
      <li><%= link_to "About" %></li>
    </ul>
  </div>
</nav>
<div class="row">
  <div class="small-6 large-2 columns"></div>
  <div class="small-6 large-8 columns"></div>
  <div class="small-12 large-2 columns">
    <% if current_user %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log Out", session_path("current"), method: 'delete' %>
    <% else %>
    <%= link_to "Sign Up", new_user_path %> or
    <%= link_to "Sign In", new_session_path %>
    <% end %>
  </div>  
</div>

<div class="row">
  <div class="large-3 columns"></div>
  <div class="large-6 columns"> <%= yield %> </div>
  <div class="large-3 columns"></div>
</div>

    

    
    <%= javascript_include_tag "application" %>
    <%= params.inspect %>
    
  </body>
</html>
